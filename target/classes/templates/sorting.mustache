<body>

<!-- ======= Header ======= -->
<header id="header" class="header fixed-top">
    <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

        <a href="/" class="logo d-flex align-items-center">
            <span>SHrek</span>
        </a>

        <nav id="navbar" class="navbar">
            <ul>
                <li><a class="nav-link scrollto active" href="/file">Главное меню</a></li>
                <li><a class="getstarted scrollto" href="/login">Выйти</a></li>
            </ul>
            <i class="bi bi-list mobile-nav-toggle"></i>
        </nav><!-- .navbar -->

    </div>
</header><!-- End Header -->

<!-- ======= Hero Section ======= -->
<!--NEW MARKUP-->
<div class="container main">
    <div class="container child">
        <div class="row justify-content-md-center row-top">
            <div class="col">

            </div>
            <div class="col colTop">
                <div class="login-form">
                    <form method="POST" enctype="multipart/form-data" action="/exportPreSet">
                        <h2 class="text-center">Путь экспортирования:</h2>
                        <div class="form-group">
                            <input type="text" class="form-control" name="path" required="required"
                                   placeholder="Выберете место">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-lg btn-block buttonToUpload"
                                    value="Upload">
                                Экспортировать
                            </button>
                        </div>
                    </form>
                    <td>Место для экспортирования:</td>
                </div>
            </div>
            <div class="col colTop">
                <div class="login-form">
                    <form method="POST" enctype="multipart/form-data" action="/find">
                        <h2 class="text-center">Поиск по ключевым словам:</h2>
                        <div class="form-group">
                            <input type="text" class="form-control" name="key" required="required"
                                   placeholder="Ключевые слова">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-lg btn-block buttonToUpload"
                                    value="Upload">
                                Найти
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col">

            </div>
        </div>
        <div class="row justify-content-md-center">
            <div class="col">

            </div>
            <div class="col colTop">
                <details>
                    <summary>Пресеты</summary>
                    <ul class="ull">
                        {{#preSets}}
                            <li class="lii">
                                <form action="/preSet" method="POST">
                                    <input type="text" id="lname" name="chosenPreSet" value="{{name}}"
                                           placeholder="{{name}}">
                                    <button type="submit" value="log">Submit</button>
                                </form>
                            </li>
                        {{/preSets}}
                    </ul>
                </details>
            </div>
            <div class="col colTop">
                <form method="POST" enctype="multipart/form-data" action="/addPreSet">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="floatingInput"
                               required="required"
                               placeholder="name" name="name">
                        <label for="floatingInput">Name</label>
                    </div>
                    <div class="form-floating">
                        <input type="text" class="form-control" id="floatingPassword"
                               placeholder="domens"
                               name="sets">
                        <label for="floatingPassword">Domens</label>
                    </div>
                    <button class="w-100 btn btn-lg btn-primary" type="submit" value="Log">Добавить
                    </button>
                </form>
            </div>
            <div class="col">

            </div>
        </div>
    </div>

</div>


<!--TABLE-->
<div class="container cont">
    <div class="child">
        <div class="main-table">
            <table class="table table-striped table-bordered main-table" id="main-table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Имя</th>
                    <th scope="col">Пол</th>
                    <th scope="col">Врозраст</th>
                    <th scope="col">Телефон</th>
                    <th scope="col">Email</th>
                    <th scope="col">Comment</th>
                </tr>
                </thead>
                <tbody>
                {{#items}}
                    <tr>
                        <th scope="row">{{index}}</th>
                        <td>{{name}}</td>
                        <td>{{sex}}</td>
                        <td>{{age}}</td>
                        <td>{{phone}}</td>
                        <td>{{email}}</td>
                        <td>{{comment}}</td>
                    </tr>
                {{/items}}
                </tbody>
            </table>
        </div>

    </div>
</div>


<!-- Vendor JS Files -->
<script src="assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
