<body>

<!-- ======= Header ======= -->
<header id="header" class="header fixed-top">
    <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

        <a href="/" class="logo d-flex align-items-center">
            <span>SHrek</span>
        </a>

        <nav id="navbar" class="navbar">
            <ul>
                <li><a class="nav-link scrollto active" href="/sorting">Отсортировать таблицу</a></li>
                <li><a class="getstarted scrollto" href="/login">Выйти</a></li>
            </ul>
            <i class="bi bi-list mobile-nav-toggle"></i>
        </nav><!-- .navbar -->

    </div>
</header><!-- End Header -->

<!-- ======= Hero Section ======= -->

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-4" id="left-part">
            <div class="login-form">
                <form method="POST" enctype="multipart/form-data" action="/">
                    <h2 class="text-center">Файл для импортирования:</h2>
                    <div class="form-group">
                        <input type="file" class="form-control" name="file" required="required">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg btn-block buttonToUpload" value="Upload">
                            Загрузить данные
                        </button>
                    </div>
                </form>
            </div>
            <div class="login-form">
                <form method="POST" enctype="multipart/form-data" action="/export">
                    <h2 class="text-center">Путь экспортирования:</h2>
                    <div class="form-group">
                        <input type="text" class="form-control" name="path" required="required"
                               placeholder="Выберете место">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg btn-block buttonToUpload" value="Upload">
                            Экспортировать
                        </button>
                    </div>
                </form>
                <td>Место для экспортирования:</td>
            </div>
        </div>
        <div class="col-lg-8" id="right-part">
            <div class="main-table">
                <table class="table table-striped table-bordered main-table" id="main-table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Имя</th>
                        <th scope="col">Пол</th>
                        <th scope="col">Врозраст</th>
                        <th scope="col">Телефон</th>
                        <th scope="col">Email</th>
                        <th scope="col">Comment</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#items}}
                        <tr>
                            <th scope="row">{{index}}</th>
                            <td>{{name}}</td>
                            <td>{{sex}}</td>
                            <td>{{age}}</td>
                            <td>{{phone}}</td>
                            <td>{{email}}</td>
                            <td>{{comment}}</td>
                        </tr>
                    {{/items}}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

<form method="POST" enctype="multipart/form-data" action="/drop">
    <h2 class="text-center">Форматировать базу данных:</h2>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg btn-block buttonToUpload" value="Delete">
            Форматировать
        </button>
    </div>
</form>

